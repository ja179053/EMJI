@using EMJI.Models;
<li class="draggable" draggable="true" title="@Table.Name" @ondragstart="@(() => HandleDragStart(Table))">
    <p class="description">@Table.Name</p>
    <p class="last-updated"><small>Last Updated</small> @Table.LastUpdated.ToString("HH:mm.ss tt")</p>
    <img src="emjilogo.png" draggable="true" ondragstart="drag(event)" id="drag1" width="88" height="31">
</li>
@code {
    [CascadingParameter]
    TablesContainer Container
    {
        get;
        set;
    }
    [Parameter]
    public Table Table
    {
        get;
        set;
    }
    private void HandleDragStart(Table selectedTable)
    {
        Container.Payload = selectedTable;
    }
}